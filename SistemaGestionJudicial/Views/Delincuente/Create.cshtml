@model SistemaGestionJudicial.Models.Persona

@{
    ViewData["Title"] = "Añadir Nuevo Delincuente";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mx-auto p-6 max-w-4xl">
    <div class="card bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold mb-6 text-gray-800"><i class="fas fa-user-plus mr-2"></i> @ViewData["Title"]</h2>

        <form asp-action="Create" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 text-sm font-semibold"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Nombres" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Nombres" required pattern="^[a-zA-ZáéíóúÁÉÍÓÚñÑ\s]+$" maxlength="100"
                           oninput="this.value = this.value.replace(/[^a-zA-ZáéíóúÁÉÍÓÚñÑ\s]/g, '');"
                           class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Nombres" class="text-red-500 text-xs italic"></span>
                </div>
                <div>
                    <label asp-for="Apellidos" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Apellidos" required pattern="^[a-zA-ZáéíóúÁÉÍÓÚñÑ\s]+$" maxlength="100"
                           oninput="this.value = this.value.replace(/[^a-zA-ZáéíóúÁÉÍÓÚñÑ\s]/g, '');"
                           class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Apellidos" class="text-red-500 text-xs italic"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Cedula" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input asp-for="Cedula" type="text" required pattern="^\d{10}$" minlength="10" maxlength="10"
                           oninput="this.value = this.value.replace(/[^0-9]/g, '');"
                           class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Cedula" class="text-red-500 text-xs italic"></span>
                </div>
                <div>
                    <label asp-for="FechaNacimiento" class="block text-gray-700 text-sm font-bold mb-2"></label>
                    <input type="date" asp-for="FechaNacimiento" required
                           class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="FechaNacimiento" class="text-red-500 text-xs italic"></span>
                </div>
            </div>

            <div>
                <label asp-for="Genero" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <select asp-for="Genero" required
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <option value="">Seleccione</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                    <option value="O">Otro</option>
                </select>
                <span asp-validation-for="Genero" class="text-red-500 text-xs italic"></span>
            </div>

            <div>
                <label asp-for="Direccion" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Direccion" maxlength="255"
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Direccion" class="text-red-500 text-xs italic"></span>
            </div>
            <div>
                <label asp-for="Telefono" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Telefono" type="tel" pattern="^\+?\d[\d\s-]{7,18}\d$" maxlength="20"
                       oninput="this.value = this.value.replace(/[^0-9+\s-]/g, '');"
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Telefono" class="text-red-500 text-xs italic"></span>
            </div>
            <div>
                <label asp-for="CorreoElectronico" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="CorreoElectronico" type="email" required maxlength="100"
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="CorreoElectronico" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="flex justify-end space-x-4 mt-6">
                <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Volver al listado
                </a>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="fas fa-save mr-2"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>