    <!-- Cases Table -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="p-3 text-left text-sm font-medium text-gray-600">Case ID</th>
                        <th class="p-3 text-left text-sm font-medium text-gray-600">Crime Type</th>
                        <th class="p-3 text-left text-sm font-medium text-gray-600">Date</th>
                        <th class="p-3 text-left text-sm font-medium text-gray-600">Location</th>
                        <th class="p-3 text-left text-sm font-medium text-gray-600">Offender(s)</th>
                        <th class="p-3 text-left text-sm font-medium text-gray-600">Severity</th>
                        <th class="p-3 text-left text-sm font-medium text-gray-600">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <tr>
                        <td class="p-3 text-sm">CR-2023-1001</td>
                        <td class="p-3 text-sm">Fraud</td>
