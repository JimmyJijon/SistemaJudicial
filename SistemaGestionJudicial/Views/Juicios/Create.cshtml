@model SistemaGestionJudicial.Models.Juicio

@{
    ViewData["Title"] = "Crear Juicio";
}

@section Styles {
    <link rel="stylesheet" href="~/css/juicios.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

<div class="fondo-juicios min-h-screen">
    <!-- Nuevo Header fijo -->
    <header class="bg-white shadow-sm py-4 px-6 flex justify-between items-center sticky top-0 z-10">
        <h2 class="text-xl font-semibold text-gray-800">Crear Juicio</h2>
        <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg">
            <i class="fas fa-arrow-left mr-1"></i> Volver
        </a>
    </header>

    <!-- Contenido principal -->
    <div class="p-8 pt-6 pb-32">
        <div class="bg-white rounded-lg shadow p-6">
            <form asp-action="Create" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div asp-validation-summary="ModelOnly" class="text-red-600 col-span-full"></div>

                <div>
                    <label asp-for="FechaInicio" class="block text-sm font-medium text-gray-700 mb-1">Fecha de Inicio</label>
                    <input asp-for="FechaInicio" class="form-input" type="date" />
                    <span asp-validation-for="FechaInicio" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="FechaFin" class="block text-sm font-medium text-gray-700 mb-1">Fecha de Fin</label>
                    <input asp-for="FechaFin" class="form-input" type="date" />
                    <span asp-validation-for="FechaFin" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="IdPersonaJuez" class="block text-sm font-medium text-gray-700 mb-1">Juez</label>
                    <select asp-for="IdPersonaJuez" asp-items="ViewBag.IdPersonaJuez" class="form-input">
                        <option value="">-- Selecciona un juez --</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label>Fiscal</label>
                    <select name="IdPersonaFiscal" class="form-select">
                        <option value="">-- Selecciona un fiscal --</option>
                        @foreach (var fiscal in (SelectList)ViewBag.Fiscales)
                        {
                            <option value="@fiscal.Value">@fiscal.Text</option>
                        }
                    </select>
                </div>

                <div>
                    <label asp-for="IdDenuncia" class="block text-sm font-medium text-gray-700 mb-1">Denuncia</label>
                    <select asp-for="IdDenuncia" asp-items="ViewBag.IdDenuncia" class="form-input">
                        <option value="">-- Selecciona una denuncia --</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label>Acusado</label>
                    <select name="IdPersonaAcusado" class="form-select">
                        <option value="">-- Selecciona un acusado --</option>
                        @foreach (var acusado in (SelectList)ViewBag.Acusados)
                        {
                            <option value="@acusado.Value">@acusado.Text</option>
                        }
                    </select>
                </div>

                <div class="mb-4">
                    <label>Estado del juicio</label>
                    <select asp-for="Estado" class="form-select">
                        <option value="">-- Selecciona un estado --</option>
                        <option value="Programado">Programado</option>
                        <option value="En proceso">En proceso</option>
                        <option value="Concluido">Concluido</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="col-span-full flex justify-end mt-4">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg">
                        <i class="fas fa-save mr-2"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.querySelector('form');
            const estado = document.querySelector('[name="Estado"]');
            const fechaInicio = document.querySelector("input[name='FechaInicio']");
            const fechaFin = document.querySelector("input[name='FechaFin']");
            const errorSpanFechaFin = document.querySelector('[data-valmsg-for="FechaFin"]');

            function validarFormatoFecha(input) {
                const valor = input.value;
                const regex = /^\d{4}-\d{2}-\d{2}$/;
                if (!regex.test(valor)) {
                    input.setCustomValidity("La fecha debe tener el formato correcto (yyyy-MM-dd).");
                } else {
                    input.setCustomValidity("");
                }
            }

            fechaInicio?.addEventListener("input", function () {
                validarFormatoFecha(this);
            });

            fechaFin?.addEventListener("input", function () {
                validarFormatoFecha(this);
            });

            form?.addEventListener('submit', function (e) {
                // Validación condicional de FechaFin si Estado es Concluido
                if (estado?.value === 'Concluido' && !fechaFin?.value) {
                    e.preventDefault();
                    if (errorSpanFechaFin) {
                        errorSpanFechaFin.textContent = 'La fecha de fin es obligatoria si el juicio está concluido.';
                        errorSpanFechaFin.classList.add('text-red-500');
                    }
                } else {
                    // Limpiar mensaje si es válido
                    if (errorSpanFechaFin) {
                        errorSpanFechaFin.textContent = '';
                        errorSpanFechaFin.classList.remove('text-red-500');
                    }
                }

                // Validar formato antes de enviar
                validarFormatoFecha(fechaInicio);
                validarFormatoFecha(fechaFin);
            });

            // Forzar abrir calendario al hacer clic en los inputs de fecha
            const dateInputs = document.querySelectorAll('input[type="date"]');

            dateInputs.forEach(input => {
                input.addEventListener("focus", function () {
                    this.showPicker?.(); // Para navegadores compatibles
                });

                input.addEventListener("click", function () {
                    this.showPicker?.();
                });
            });
        });
    </script>
}